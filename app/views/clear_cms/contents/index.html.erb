  Contents 
<% end %>


<div class="filters">

<form method="get" action="<%= clear_cms.site_contents_path(current_site) %>" class="form-search">
  <div class="input-append">
    <input type="text" name="q">
    <button type="submit" class="btn">Filter</button>
  </div>
</form>

</div>

<!--
