<h3>Change History For <%= @content._type.titleize %>:</h3>
<h3><%= link_to @content.title, edit_content_path(@content) %></h3>

<% @trackers.each do |tracker| %>

  <hr>

  <div class="row-fluid">
    <div class="span16">
      <div class=''>
        <p>
          <b><%= tracker.action.titleize %> <%= tracker.association_chain.last[:name].titleize %> on <%= tracker.created_at.to_formatted_s(:long)%> </b>
        </p>
        <p>By: <%= tracker.modifier == nil ? 'Untracaked User' : tracker.modifier %></p>

          <%= form_tag clear_cms.history_tracker_path(tracker), method: :patch, class: '' do %>
            <%= submit_tag('Undo', class: 'btn-warning') %>
            <%= submit_tag('Redo', class: 'btn-warning') %>
          <% end %>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6" style="overflow: scroll;">
      <p><b>Previous</b></p>
      <pre>
        <% tracker.original.each do |key, value| %>
          <%= key %>: <%= value %>
        <% end %>
      </pre>
    </div>
    <div class="span6" style="overflow: scroll;">
      <p><b>Changed</b></p>
      <pre>
        <% tracker.modified.each do |key, value| %>
          <%= key %>: <%= value %>
        <% end %>
      </pre>
    </div>
  </div>

<% end %>
